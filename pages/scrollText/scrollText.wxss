page {
  background-color: #000;
}

/**顶部文字滑动*/
.index-container {
  width: 100vw;
  height: 100vh;
  display: flex;
  overflow: hidden;
}

.animation {
  display: grid;
}

.scroll-text {
  display: inline-block;
  font-weight: bold;
  font-size: 500rpx;
  color: #fff;
  white-space: nowrap;
  writing-mode: vertical-lr;
  transform: rotate(90deg);
}