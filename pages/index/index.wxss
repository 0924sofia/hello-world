page {
  background-color: #000;
}

.index-container {
  color: #fff;
  margin: 0 24rpx;
}

/**顶部文字滑动*/
.scroll-container {
  width: 100%;
  height: 200rpx;
  display: flex;
  overflow: hidden;
  background-color: #333333;
  color: gray;
}

.text {
  font-weight: bold;
  font-size: 80rpx;
  white-space: nowrap;
  animation: 4s loop linear infinite normal;
}

@keyframes loop {
  0% {
    transform: translateX(350px);
    -webkit-transform: translateX(350px);
  }

  100% {
    transform: translateX(-100%);
    -webkit-transform: translateX(-100%);
  }
}

@-webkit-keyframes loop {
  0% {
    transform: translateX(300px);
    -webkit-transform: translateX(300px);
  }

  100% {
    transform: translateX(-100%);
    -webkit-transform: translateX(-100%);
  }
}

.colorful-container {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  margin-top: 40rpx;
  gap: 10px;
  font-size: 50rpx;
}

.scroll-text {
  background-color: #333333;
  text-shadow:
    0 0 5px #ff69b4,
    /* 浅粉散光 */
    0 0 10px #ff69b4,
    /* 浅粉外扩 */
    0 0 20px #ff1493,
    /* 深粉过渡 */
    0 0 30px #ff1493,
    /* 深粉外扩 */
    0 0 40px #c71585,
    /* 深紫粉散光 */
    0 0 50px #db7093,
    /* 粉紫散光增强 */
    0 0 75px #800040;
  /* 最深粉紫散光 */
}

/* 设置 */
.bottom-setting {
  padding: 40rpx;
  background-color: #333333;
}

.mT40 {
  margin-top: 40rpx;
}

.left {
  width: 100rpx;
}

.input-text {
  height: 180rpx;
  border: 2rpx solid #fff;
  padding: 20rpx;
}

.color-list-container {
  width: calc(100vw - 300rpx);
  overflow: auto;
  white-space: nowrap;
  height: auto;
}

.scroll-view {
  width: auto;
  height: 96rpx;
  overflow: scroll;
}

.color-list {
  width: 80rpx;
  height: 80rpx;
  display: inline-block;
}

.md-color {
  width: 60rpx;
  height: 60rpx;
}

.color-active {
  transform: scale(1.2);
}

.speed-item {
  padding: 0 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  border: 2rpx solid #fff;
}

.active {
  color: rgba(26, 173, 25, 1);
  border: 2rpx solid rgba(26, 173, 25, 1);
}