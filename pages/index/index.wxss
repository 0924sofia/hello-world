page {
  background-color: #000;
}

.index-container {
  color: #fff;
  margin: 0 24rpx;
}

/**顶部文字滑动*/
.scroll-container {
  width: 100%;
  height: 200rpx;
  display: flex;
  overflow: hidden;
  background-color: #333333;
}

.scroll-text {
  font-weight: bold;
  font-size: 80rpx;
  white-space: nowrap;
}

.colorful-container {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  margin-top: 40rpx;
  gap: 10px;
  font-size: 50rpx;
}

.left {
  height: 200rpx;
  background-color: #333333;
  text-shadow:
    0 0 5px #ff69b4,
    /* 浅粉散光 */
    0 0 10px #ff69b4,
    /* 浅粉外扩 */
    0 0 20px #ff1493,
    /* 深粉过渡 */
    0 0 30px #ff1493,
    /* 深粉外扩 */
    0 0 40px #c71585,
    /* 深紫粉散光 */
    0 0 50px #db7093,
    /* 粉紫散光增强 */
    0 0 75px #800040;
  /* 最深粉紫散光 */
}

.right {
  text-shadow:
    0 0 5px #00f,
    /* 浅蓝散光 */
    0 0 10px #00f,
    /* 浅蓝外扩 */
    0 0 20px #00f,
    /* 蓝色过渡 */
    0 0 30px #0055ff,
    /* 深蓝散光 */
    0 0 40px #0055ff,
    /* 深蓝外扩 */
    0 0 50px #0044cc,
    /* 深蓝增强 */
    0 0 75px #003399;
  /* 最深蓝散光 */
}